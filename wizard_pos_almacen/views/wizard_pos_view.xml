<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="wizard_form_view">
			<field name="name">wizard_pos.form</field>
			<field name="model">almacen.actpos</field>
			<field name="arch" type="xml">
				<form string="Activar productos en el punto de venta">
					<group>
						<field name="product_wiz_ids"></field>
					</group>
					<footer>
						<button name="activar_enpos" type="object" string="Activar en el punto de venta" class="oe_hightlight"></button>
						o
						<button special="cancel" string="Cancelar"></button>
					</footer>
				</form>
			</field>
		</record>

		<act_window id="launch_pos_wizard"
			name="Activar en punto de venta"
			src_model="product.product"
			res_model="almacen.actpos"
			view_mode="form"
			target="new"
			key2="client_action_multi"/>

	</data>
</odoo>
